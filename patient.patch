+"""환자 관리 로직.
+
+기존에 정의된 :mod:`user` 모듈의 클래스를 그대로 활용하고, 필요한 경우에만
+확장/상속을 통해 추가 기능을 제공한다. 불필요하게 새로운 사용자 클래스를
+정의하지 않고, 환자와 주치의 간의 관계나 데이터 기록을 관리하는 데 집중한다.
+"""
+
+from __future__ import annotations
+
+from typing import Iterable, List, Optional
+
+from user import Data, Docter, Patient, User
+
+
+class PatientManager:
+    """환자와 관련된 객체를 관리하는 도우미 클래스.
+
+    - 새로운 환자를 등록하고 조회한다.
+    - 환자에게 주치의를 배정한다.
+    - 건강 데이터(:class:`user.Data`)를 기록한다.
+
+    기존의 :class:`user.Patient`, :class:`user.Docter` 클래스를 재사용하며
+    추가적인 사용자 클래스 정의를 피한다.
+    """
+
+    def __init__(self, users: Optional[Iterable[User]] = None) -> None:
+        self._users: List[User] = list(users) if users else []
+
+    def add_patient(
+        self,
+        name: str,
+        age: int,
+        gender: str,
+        user_id: str,
+        password: str,
+        phone_number: str,
+        email: str,
+    ) -> Patient:
+        """새로운 환자를 생성해 내부 목록에 추가한다."""
+
+        patient = Patient(
+            name,
+            age,
+            gender,
+            user_id,
+            password,
+            phone_number,
+            email,
+            "개인 사용자",
+        )
+        self._users.append(patient)
+        return patient
+
+    def register_existing_user(self, user: User) -> None:
+        """외부에서 생성된 사용자 객체를 목록에 추가한다."""
+
+        self._users.append(user)
+
+    def _find_patient(self, user_id: str) -> Optional[Patient]:
+        for user in self._users:
+            if isinstance(user, Patient) and user.getId() == user_id:
+                return user
+        return None
+
+    def assign_doctor(self, patient_id: str, doctor: Docter) -> bool:
+        """환자에게 주치의를 배정한다.
+
+        반환값은 배정 성공 여부이다.
+        """
+
+        patient = self._find_patient(patient_id)
+        if not patient:
+            return False
+
+        patient._Patient__mainDocter = doctor  # 기존 속성을 그대로 활용
+        return True
+
+    def add_health_record(self, patient_id: str, data: Data) -> bool:
+        """환자의 건강 데이터를 기록한다."""
+
+        patient = self._find_patient(patient_id)
+        if not patient:
+            return False
+
+        patient.addData(data)
+        return True
+
+    def get_patient_data(self, patient_id: str) -> list[Data]:
+        """환자의 건강 데이터 목록을 반환한다.
+
+        환자를 찾지 못하면 빈 리스트를 반환한다.
+        """
+
+        patient = self._find_patient(patient_id)
+        return patient.getDataList() if patient else []
+
+
+class IncentivizedPatient(Patient):
+    """인센티브 관련 보조 기능이 필요한 환자 클래스.
+
+    기본 :class:`user.Patient`에서 제공하는 속성을 확장만 하며, 새로운 사용자
+    계층을 만드는 대신 상속을 통해 기능을 덧붙인다.
+    """
+
+    def add_incentive(self, score: int) -> None:
+        self.__incentiveScore = getattr(self, "_Patient__incentiveScore", 0) + score
+
+    def get_incentive(self) -> int:
+        return getattr(self, "_Patient__incentiveScore", 0)
